<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Movie</th>
      <th>List</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.comment %></td>
        <td><%= bookmark.movie.title if bookmark.movie %></td>
        <td><%= bookmark.list.name if bookmark.list %></td>
        <td><%= link_to 'Show', bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
