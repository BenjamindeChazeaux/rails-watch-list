<div class="container mt-4">
  <h1 class="section-title">Create a New List</h1>

  <div class="card bg-dark text-white">
    <div class="card-body">
      <%= simple_form_for @list do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, label: "List Name", input_html: { class: "form-control" } %>
        </div>

        <div class="form-actions mt-3">
          <%= f.button :submit, "Create List", class: "btn btn-netflix-primary" %>
          <%= link_to "Back to Lists", lists_path, class: "btn btn-netflix-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
