<div class="container mt-4">
  <h1 class="section-title">My Lists</h1>

  <div class="d-flex justify-content-end mb-4">
    <%= link_to "Create New List", new_list_path, class: "btn btn-netflix-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card bg-dark text-white">
          <div class="card-body text-center">
            <h5 class="card-title"><%= list.name %></h5>
            <%= link_to "View", list_path(list), class: "btn btn-sm btn-netflix-secondary mt-2" %>
            <%= link_to "Edit", edit_list_path(list), class: "btn btn-sm btn-netflix-primary mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
