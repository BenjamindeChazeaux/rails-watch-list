<h1>Movies</h1>

<%= link_to 'New Movie', new_movie_path %>

<table>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Title</th>
      <th>Overview</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= image_tag("#{@base_url}#{@image_size}#{movie.poster_url}") if movie.poster_url.present? %>
        </td>
        <td><%= movie.title %></td>
        <td><%= movie.overview %></td>
        <td><%= movie.rating %></td>
        <td><%= link_to 'Show', movie_path(movie) %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>